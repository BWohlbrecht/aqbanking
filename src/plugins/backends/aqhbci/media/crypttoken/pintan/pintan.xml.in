<?xml version="1.0" encoding="utf8"?>

<plugin type="crypttoken" name="pintan" device="none" >
  <version>@AQHBCI_VERSION_STRING@</version>
  <author>Martin Preuss (martin@libchipcard.de)</author>
  <short>Pin/Tan Pseudo Medium</short>

  <descr>
    This plugins provides support for PIN/TAN mode.

    <text format="html" >
      <p>
        This plugins provides support for PIN/TAN mode.
      </p>
    </text>

    <text format="html" lang="de" >
      <p>
        Dieses Modul unterstuetzt den PIN/TAN-Modus.
      </p>
    </text>

  </descr>


  <crypttokens>
    <crypttoken typeName="pintan">
      <flags>
        <flag>manages_signseq</flag>
        <flag>predef_context_only</flag>
      </flags>
  
      <signinfos>
        <signinfo>
          <id>1</id>
          <hashalgo>any</hashalgo>
          <paddalgo>any</paddalgo>
        </signinfo>
      </signinfos>
      
      <cryptinfos>
        <cryptinfo>
          <id>1</id>
          <cryptalgo>any</cryptalgo>
          <paddalgo>any</paddalgo>
        </cryptinfo>
      </cryptinfos>

      <authinfos>
        <authinfo>
          <id>1</id>
          <hashalgo>any</hashalgo>
          <paddalgo>any</paddalgo>
        </authinfo>
      </authinfos>
      
      <keyinfos>
        <keyinfo>
          <keyId>1</keyId>
          <keySize>768</keySize>
          <minKeySize>768</minKeySize>
          <maxKeySize>2048</maxKeySize>
          <chunksize>96</chunksize>
          <cryptalgo>rsa</cryptalgo>
          <keyDescription>Fake Key for all Operations</keyDescription>
          <keyFlags>
            <flag>canSign</flag>
            <flag>canVerify</flag>
            <flag>hasSignSeq</flag>
          </keyFlags>
        </keyinfo>
      </keyinfos>
  
      <contexts>

        <context>
          <id>1</id>
          <contextType>rsa</contextType>
          <description>Context for HBCI operations</description>
          
          <signkeyinfo id="1" />
          <verifykeyinfo id="1" />
          <signinfo id="1" />
  
          <encryptKeyInfo id="1" />
          <decryptKeyInfo id="1" />
          <cryptinfo id="1" />

          <localAuthKeyInfo id="1" />
          <remoteAuthKeyInfo id="1" />
          <authinfo id="1" />
          
        </context>

      </contexts>
    </crypttoken>
  </crypttokens>

</plugin>


