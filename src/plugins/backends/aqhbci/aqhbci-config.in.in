prefix="@prefix@"
exec_prefix="@exec_prefix@"
libdir="@libdir@"
includedir="@includedir@"
datadir="@datadir@"

result=""

for d in $*; do
    case $d in
	--includes)
	    result="$result @all_includes@ @aqhbci_includes@"
	    ;;
	--libraries)
	    result="$result @aqhbci_ldflags@ @aqhbci_libs@"
	    ;;
	--plugins)
	    result="$result @aqhbci_plugindir@"
	    ;;
	--data)
	    result="$result @aqhbci_data@"
	    ;;
	--vmajor)
	    result="$result @AQHBCI_VERSION_MAJOR@"
	    ;;
	--vminor)
	    result="$result @AQHBCI_VERSION_MINOR@"
	    ;;
	--vpatchlevel)
	    result="$result @AQHBCI_VERSION_PATCHLEVEL@"
	    ;;
	--vbuild)
	    result="$result @AQHBCI_VERSION_BUILD@"
	    ;;
	--vtag)
	    result="$result @AQHBCI_VERSION_TAG@"
	    ;;
        --vstring)
	    result="$result @AQHBCI_VERSION_MAJOR@.@AQHBCI_VERSION_MINOR@.@AQHBCI_VERSION_PATCHLEVEL@"
            ;;
	*)
	    echo "Usage:"
	    echo "$0 --includes gives you the include flags"
	    echo "$0 --libraries gives you the library flags"
	    echo "$0 --vmajor gives the major version of AqHBCI"
	    echo "$0 --vminor gives the minor version of AqHBCI"
	    echo "$0 --vpatchlevel gives the patchlevel of AqHBCI"
	    echo "$0 --vbuild gives the build number of AqHBCI"
	    echo "$0 --vtag gives the tag of AqHBCI (cvs, beta or stable)"
	    echo "$0 --vstring returns a version string"
	    exit 1
	    ;;
    esac
done
echo $result
