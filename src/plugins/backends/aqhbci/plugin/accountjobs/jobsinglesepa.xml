         delimiter=":" terminator="'" isbpdjob="1" >
   <GROUP type="BPDJob" version="2" />
   <VALUES>
     <VALUE path="head/code">%code</VALUE>
     <VALUE path="head/version">%version</VALUE>
   </VALUES>
 </SEGdef>





 <!-- Kundennachricht -->
