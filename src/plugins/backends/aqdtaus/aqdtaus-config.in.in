prefix="@prefix@"
exec_prefix="@exec_prefix@"
libdir="@libdir@"
datadir="@datadir@"

result=""

for d in $*; do
    case $d in
	--includes)
	    result="$result @all_includes@ @aqdtaus_includes@"
	    ;;
	--libraries)
	    result="$result @aqdtaus_libs@"
	    ;;
	--plugins)
	    result="$result @aqdtaus_plugins@"
	    ;;
	--data)
	    result="$result @aqdtaus_data@"
	    ;;
	--vmajor)
	    result="$result @AQDTAUS_VERSION_MAJOR@"
	    ;;
	--vminor)
	    result="$result @AQDTAUS_VERSION_MINOR@"
	    ;;
	--vpatchlevel)
	    result="$result @AQDTAUS_VERSION_PATCHLEVEL@"
	    ;;
	--vbuild)
	    result="$result @AQDTAUS_VERSION_BUILD@"
	    ;;
	--vtag)
	    result="$result @AQDTAUS_VERSION_TAG@"
	    ;;
        --vstring)
	    result="$result @AQDTAUS_VERSION_MAJOR@.@AQDTAUS_VERSION_MINOR@.@AQDTAUS_VERSION_PATCHLEVEL@"
            ;;
	*)
	    echo "Usage:"
	    echo "$0 --includes gives you the include flags"
	    echo "$0 --libraries gives you the library flags"
	    echo "$0 --vmajor gives the major version of AqDTAUS"
	    echo "$0 --vminor gives the minor version of AqDTAUS"
	    echo "$0 --vpatchlevel gives the patchlevel of AqDTAUS"
	    echo "$0 --vbuild gives the build number of AqDTAUS"
	    echo "$0 --vtag gives the tag of AqDTAUS (cvs, beta or stable)"
	    echo "$0 --vstring returns a version string"
	    exit 1
	    ;;
    esac
done
echo $result
