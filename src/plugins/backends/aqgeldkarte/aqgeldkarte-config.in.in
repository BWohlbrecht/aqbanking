prefix="@prefix@"
exec_prefix="@exec_prefix@"
libdir="@libdir@"
includedir="@includedir@"
datadir="@datadir@"

result=""

for d in $*; do
    case $d in
	--includes)
	    result="$result @all_includes@ @aqgeldkarte_includes@"
	    ;;
	--libraries)
	    result="$result @aqgeldkarte_libs@"
	    ;;
	--plugins)
	    result="$result @aqgeldkarte_plugins@"
	    ;;
	--data)
	    result="$result @aqgeldkarte_data@"
	    ;;
	--vmajor)
	    result="$result @AQGELDKARTE_VERSION_MAJOR@"
	    ;;
	--vminor)
	    result="$result @AQGELDKARTE_VERSION_MINOR@"
	    ;;
	--vpatchlevel)
	    result="$result @AQGELDKARTE_VERSION_PATCHLEVEL@"
	    ;;
	--vbuild)
	    result="$result @AQGELDKARTE_VERSION_BUILD@"
	    ;;
	--vtag)
	    result="$result @AQGELDKARTE_VERSION_TAG@"
	    ;;
        --vstring)
	    result="$result @AQGELDKARTE_VERSION_MAJOR@.@AQGELDKARTE_VERSION_MINOR@.@AQGELDKARTE_VERSION_PATCHLEVEL@"
            ;;
	*)
	    echo "Usage:"
	    echo "$0 --includes gives you the include flags"
	    echo "$0 --libraries gives you the library flags"
	    echo "$0 --vmajor gives the major version of AqGeldKarte"
	    echo "$0 --vminor gives the minor version of AqGeldKarte"
	    echo "$0 --vpatchlevel gives the patchlevel of AqGeldKarte"
	    echo "$0 --vbuild gives the build number of AqGeldKarte"
	    echo "$0 --vtag gives the tag of AqGeldKarte (cvs, beta or stable)"
	    echo "$0 --vstring returns a version string"
	    exit 1
	    ;;
    esac
done
echo $result
